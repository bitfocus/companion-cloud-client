      "requireBranch": [
        "main",
        "master"
      ]
    },
    "npm": {
      "publish": true
    }
  },
  "keywords": [],
  "author": "Håkon Nessjøen <haakon@bitfocus.io>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^18.7.6",
    "@types/socketcluster-client": "^16.0.0",
    "release-it": "*",
    "strict-event-emitter-types": "^2.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "socketcluster-client": "^16.1.1"
  }
}
