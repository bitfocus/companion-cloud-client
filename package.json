{
  "name": "companion-cloud-client",
  "version": "1.0.7",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "ts-node src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "release": "yarn build ; release-it"
  },
  "release-it": {
    "hooks": {
      "after:bump": "yarn run build"
